<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  
  <title>Images Upload Form</title>
</head>
<body>       
  <div class="container">
    <h1> Upload Multiple Images</h1>
    <%= typeof msg != 'undefined' ? msg : '' %>
    <form action="/upload_files" method="POST" enctype="multipart/form-data">
      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="myImage1" type="file" accept="image/*" required/>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="myImage2" type="file"accept="image/*" required/>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="myImage3" type="file"accept="image/*" required/>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="myImage4" type="file"accept="image/*" required/>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <button type="submit" class="btn">Submit</button>
    </form>
    <br>
    <img src="<%= typeof file != 'undefined' ? file : '' %>" class="responsive-img">
  </div>

  <script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>  
  <script>
    var files = ['myImage1','myImage2','myImage3','myImage4']
    files.forEach(myfunction);
    function myFunction(item, index) {
      document.getElementById("myImage1","myImage2","myImage13","myImage4").innerHTML += index + ":" + item + "<br>"; 
    }
  </script>
</body>
</html>
